// Global styles
$primary = #3d7dcb
$primary-gradient = #395ae1
$secondary = #F2994A
$accent = #555
$dark = #000000
$positive = #21BA45
$negative = #DB2828
$info = #31CCEC
$warning = #F2C037
$body-background = #F2F2F2
$body-color = #FFFFFF
$border = #E0E0E0
