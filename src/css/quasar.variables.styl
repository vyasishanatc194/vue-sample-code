// Local Compare component styles
$compare-first-item-background-color = $historical-first-selected-tag-line-color
$compare-second-item-background-color = $historical-second-selected-tag-line-color
$compare-yaxis-line-color = $compare-second-item-background-color
$compare-opposite-yaxis-line-color = $compare-first-item-background-color

// Local Calendar component styles
$calendar-border-color = #EBECF0
$calendar-event-red-dot = $notification-need-attention-color
$calendar-event-blue-dot = $link-color
$calendar-tooltip-color = #EFF3F6

// Local Houseview components styles
$house-view-bar-chart-column-color = $historical-first-selected-tag-line-color
