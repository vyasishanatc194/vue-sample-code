// Global card styles
$card-action-color = #FAFBFC

// Global table styles
$table-header-color = $card-action-color

// Global icon styles
$search-icon-color = #97A0AF
$select-box-clear-icon-color = $search-icon-color
$calendar-icon-color = $search-icon-color

// Global chart styles
$chart-grid-line-color = #F4F5F7
