$login-right-background = #0043BD
$sign-in-button-color = $tab-active-color
$email-field-placeholder-color = $search-icon-color
$select-field-text-color = $search-icon-color

// Local Whats new component styles
$whats-new-feature-status-color = #006644
$whats-new-feature-status-background = #E3FCEF
$whats-new-improvement-status-color = #FF8B00
$whats-new-improvement-status-background = #FFFAE6

