// Local Map component styles
$map-side-bar-barn-icon-background-color = #5244AA

// App Shared Font Variables
// --------------------------------------------------
@font-face
    font-family Primary-Font
    font-style normal
    src url(/statics/fonts/Montserrat-Regular.ttf)

@font-face
    font-family Primary-Font-Bold
    font-style normal
    src url(/statics/fonts/Montserrat-Bold.ttf)

@font-face
    font-family Primary-Font-Medium
    font-style normal
    src url(/statics/fonts/Montserrat-Medium.ttf)

@font-face
    font-family Primary-Font-SemiBold
    font-style normal
    src url(/statics/fonts/Montserrat-SemiBold.ttf)

$primary-font = "Primary-Font";
$primary-font-bold = "Primary-Font-Bold";
$primary-font-medium = "Primary-Font-Medium";
$primary-font-semibold = "Primary-Font-SemiBold";

// Set whole application font
$typography-font-family = $primary-font
